<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="vat_invoice_paperformat" model="report.paperformat">
            <field name="name">Custom Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">47</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

        <report id="vat_invoice_report"
                model="account.move"
                string="Invoice Report"
                file="alrasheed_custom_report.vat_invoice_template"
                name="alrasheed_custom_report.vat_invoice_template"
                report_type="qweb-pdf"
                paperformat="alrasheed_custom_report.vat_invoice_paperformat"
        />

    </data>
</odoo>