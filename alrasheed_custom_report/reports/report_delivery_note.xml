        <template id="report_delivery_note_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h3 class="text-center">DELIVERY NOTE</h3>
                            <h3 class="text-center">ســنــد صــرف بضــاعه</h3>
                            <br/>
                        </div>

                        <div class="row mt32 mb32">
                            <table style="border:1.3pt solid black;width:100%;color:black;" class="table table-bordered table-sm">
                                <tr>
                                    <td style="font-weight:bold; width:25%;background-color:#798bd4;">Date</td>
                                    <td style="width:50%; text-align:center;"><span t-field="o.date_done"/></td>
                                    <td class="arabic" style="width:25%; text-align:right;background-color:#838ed4;">التــاريخ</td>
                                </tr>
                                <tr>
                                    <td style="font-weight:bold; width:25%;background-color:#838ed4;">PO reference</td>
                                    <td style="width:50%; text-align:center;"><span t-field="o.origin"/></td>
                                    <td class="arabic" style="width:25%; text-align:right;background-color:#838ed4;">أمــر الشــراء</td>
                                </tr>
                                <tr>
                                    <td style="font-weight:bold; width:25%;background-color:#838ed4;">PO Date</td>
                                    <td style="width:50%; text-align:center;"><span t-field="o.scheduled_date"/></td>
                                    <td class="arabic" style="width:25%; text-align:right;background-color:#838ed4;">تاريخ أمــر الشــراء</td>
                                </tr>
                                <tr>
                                    <td style="font-weight:bold; width:25%;background-color:#838ed4;">Delivery Location</td>
                                    <td style="width:50%; text-align:center;"><span t-field="o.location_dest_id.name"/></td>
                                    <td class="arabic" style="width:25%; text-align:right;background-color:#838ed4;">مــوقع التسلــيم</td>
                                </tr>
                                <tr>
                                    <td style="font-weight:bold; width:25%;background-color:#838ed4;">Delivery Ref</td>
                                    <td style="width:50%; text-align:center;"><span t-field="o.picking_ref"/></td>
                                    <td class="arabic" style="width:25%; text-align:right;background-color:#838ed4;">أمر التسلــيم</td>
                                </tr>
                            </table>
                        </div>
                        <br/>
                        <table style="border:1.3pt solid black;width:100%;color:black;" class="table table-bordered table-sm">
                            <tr>
                                <td style="font-weight:bold; width:25%;background-color:#838ed4;">Customer Name</td>
                                <td style="width:50%; text-align:center;"><span t-field="o.partner_id.name"/></td>
                                <td class="arabic" style="width:25%; text-align:right;background-color:#838ed4;">أسم العمــيل</td>
                            </tr>
                            <tr>
                                <td style="font-weight:bold; width:25%;background-color:#838ed4;">Customer Location</td>
                                <td style="width:50%; text-align:center;"><span t-field="o.partner_location"/></td>
                                <td class="arabic" style="width:25%; text-align:right;background-color:#838ed4;">عــنوان العمـــيل</td>
                            </tr>
                        </table>
                        <br/>
                        <div class="row mt32 mb32">
                            <table style="border:1.5pt solid grey;width:100%;padding:10pt;margin-top:10pt;color:black;"
                                   class="table table-bordered table-sm">
                                <thead>
                                    <tr style="background-color:#838ed4">
                                        <td style="border:1pt solid grey;text-align:center;padding:2pt; width:10%">
                                            <br/>
                                            الرقـــم
                                            <br/>
                                            <span>#Number</span>
                                        </td>
                                        <td style="border:1pt solid grey;text-align:center;padding:2pt;width:10%">
                                            <br/>
                                            رقـــم الصـــنف
                                            <br/>
                                            <span>Item Code</span>
                                        </td>
                                        <td style="border:1pt solid grey;text-align:center;padding:2pt; width:40%">
                                            <br/>
                                            وصــف المــواد
                                            <br/>
                                            <span class="arabic">Description of Material</span>
                                        </td>
                                        <td style="border:1pt solid grey;text-align:center;padding:2pt; width:15%">
                                            <br/>
                                            تفاصــيل التعبئه
                                            <br/>
                                            <span>Piking Details</span>
                                        </td>
                                        <td style="border:1pt solid grey;text-align:center;padding:2pt; width:15%">
                                            <br/>
                                            وحـــده الوزن
                                            <br/>
                                            <span>Unit</span>
                                        </td>
                                        <td width="20%" style="border:1pt solid grey;text-align:center;padding:2pt;">
                                            <br/>
                                            الكـميــه
                                            <br/>
                                            <span >Quantity</span>
                                        </td>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="counter" t-value="1"/> -
                                     <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                                    <tr t-foreach="lines" t-as="move">
                                        <td style="text-align:left;">
                                            <span t-esc="counter"/>
                                        </td>
                                        <td style="text-align:left;">
                                            <span t-esc="move.product_id.id"/>
                                        </td>
                                        <td style="text-align:center;padding:3pt">
                                            <span t-esc="move.product_id.name"/>
                                        </td>
                                        <td style="text-align:center;padding:3pt">
                                            <span t-esc="move.product_id.Pak_details"/>
                                        </td>
                                        <td style="text-align:center;padding:3pt">
                                            <span t-esc="move.product_id.uom_id.name"/>
                                        </td>
                                        <td style="text-align:center;padding:3pt">
                                            <span t-esc="move.product_uom_qty"/>
                                        </td>
                                        <t t-set="counter" t-value="counter+1"/>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <h4 class="text-left">TRANSPORTATION DETAIL:</h4>
                        <br/>
                        <table style="border:1.3pt solid black;width:100%;color:black;" class="table table-bordered table-sm">
                            <tr>
                                <td style="font-weight:bold; width:25%;">Container #</td>
                                <td style="width:50%; text-align:center;">Seal #</td>
                                <td class="arabic" style="width:25%; text-align:right;">Tyre Weight</td>
                            </tr>
                            <tr>
                                <td style="font-weight:bold; width:25%;"><br/></td>
                                <td style="width:50%; text-align:center;"><br/></td>
                                <td class="arabic" style="width:25%; text-align:right"><br/></td>
                            </tr>
                        </table>
                        <table style="border:1.3pt solid black;width:100%;color:black;margin_top:5pt;" class="table table-bordered table-sm">
                            <tr>
                                <td style="font-weight:bold; width:25%;">TRUCK #</td>
                                <td style="width:50%; text-align:center;">DRIVER NAME</td>
                                <td class="arabic" style="width:25%; text-align:right;">DRIVER MOBILE</td>
                            </tr>
                            <tr>
                                <td style="font-weight:bold; width:25%;"><span t-field="o.truck_ref"/></td>
                                <td style="width:50%; text-align:center;"><span t-field="o.driver_name"/></td>
                                <td class="arabic" style="width:25%; text-align:right"><span t-field="o.driver_mobile"/></td>
                            </tr>
                        </table>
                        <br/>
                        <br/>
                        <br/>
                        <table style="border:0pt; width:100%;" class="table table-bordered table-sm">
                            <tr>
                                <td width="12%" style="font-weight: bold;background-color:#838ed4;"></td>
                                <td width="23%"
                                    style="font-weight: bold;text-align:center;background-color:#838ed4;"></td>
                                <td width="12%" class="arabic"
                                    style="font-weight: bold;text-align:right;background-color:#838ed4;">
                                </td>
                                <td width="6%" style="border:0pt;"/>
                                <td width="12%" style="font-weight: bold;background-color:#838ed4;"></td>
                                <td width="23%"
                                    style="font-weight: bold;text-align:center;background-color:#838ed4;"></td>
                                <td width="12%" class="arabic"
                                    style="font-weight: bold;text-align:right;background-color:#838ed4;">
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align:left;">Issued BY :</td>
                                <td class="text-center">
                                    <br/>
                                </td>
                                <td class="arabic" style="text-align:right;">الصــادر عن</td>
                                <td style="border:0pt;"/>
                                <td style="text-align:left;">Received From :</td>
                                <td class="text-center">
                                    <br/>
                                </td>
                                <td class="arabic" style="text-align:right;">إستـــلم من</td>
                            </tr>
                            <tr>
                                <td style="text-align:left;">Name : </td>
                                <td class="text-center">
                                    <br/>
                                </td>
                                <td class="arabic" style="text-align:right;">إســـم</td>
                                <td style="border:0pt;"/>
                                <td style="text-align:left;">Name : </td>
                                <td class="text-center">
                                    <br/>
                                </td>
                                <td class="arabic" style="text-align:right;">إســـم</td>
                            </tr>
                            <tr>
                                <td style="text-align:left;">Signature : </td>
                                <td class="text-center">
                                    <br/>
                                </td>
                                <td class="arabic" style="text-align:right;">التــوقيع</td>
                                <td style="border:0pt;"/>
                                <td style="text-align:left;">Signature : </td>
                                <td class="text-center">
                                    <br/>
                                </td>
                                <td class="arabic" style="text-align:right;">التــوقيع</td>
                            </tr>
                            <tr>
                                <td style="text-align:left;">Stamp</td>
                                <td class="text-center">
                                    <br/>
                                    <br/>
                                </td>
                                <td class="arabic" style="text-align:right;">الخــتم</td>
                            </tr>
                        </table>

                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>