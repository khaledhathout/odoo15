<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="white_icard_template">
                <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="width:100%;height:100%;">
                        <div style="width:670px;height:998px;background-image:url('jt_employee_icard/static/src/img/id_white_frontend.png')">
                            <div style="text-align:center;color:#027c7f;">
                                <p><span style="font-size:40px;font-weight:bold;" t-field="res_company.name"/></p>
                            </div>
                            <div style="clear:both;"/>
                            <div style="height:40%;margin-top:120px;margin-right:35px;">
                                <div style="margin-left:200px;margin-top:44px;margin-right:8px;">
                                    <img t-attf-src="data:image/png;base64,{{o.image_1920}}" style="height:260px;width:260px;margin-top:5px;border-radius:150px;"/>
                                </div>
                                <div style="text-align:center;">
                                    <p style="font-size:35px;margin-top:50px;color:black;font-weight:bold;text-transform:uppercase;"><span t-field="o.name"/></p>
                                    <p style="text-transform:uppercase;font-size:30px;margin-top:-25px;color:#027c7f;"><span t-field="o.job_id"/></p>
                                </div>
                            </div>
                            <div style="height:60;">
                                <center>
                                    <p style="font-size:30px;color:black;font-weight:bold;">ID NUMBER:</p>
                                    <p style="font-size:25px;"><span t-field="o.emp_id"/></p>
                                    <p style="font-size:30px;">JOINE DATE:&#160;&#160;&#160;<span t-field="o.joined_date"/></p>
                                    <p style="font-size:30px;">EXPIRE DATE:&#160;&#160;&#160;<span t-field="o.expired_date"/></p>
                                    <img alt="barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 120)" style="text-align:center;height:80px;width:450px;border:1px solid;padding:8px;"/>
                                    <p style="margin-top:24px;"><span style="font-size:30px;font-weight:bold;color:#10354F;" t-field="res_company.website"/></p>

                                </center>
                            </div>
                            
                        </div> 
                    </div>
                </div>
                </t>
            </t>
        </template>

        <record id="paperformat_white_employee_icard" model="report.paperformat">
            <field name="name">Employee White Front Icard</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">143</field>
            <field name="page_width">100</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

