<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="yellow_icard_back_report">
                <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="width:100%;height:100%;">
                        <div style="width:670px;height:998px;background-image:url('jt_employee_icard/static/src/img/id_yellow_back.png')">
                            <div style="height:30%;text-align:center;">
                                <img t-attf-src="data:image/png;base64,{{res_company.logo}}" style="width:80px;height:80px;margin-top:65px;padding:10px;margin-left:-50px"/>
                                <p style="margin-left:0px;margin-top:50px;"><span style="font-size:25px;color:black;" t-field="res_company.name"/></p>
                            </div>
                            
                            <!-- body -->
                            <div style="height:50%;text-align:center;margin-top:0px;">
                                <center>
                                    <table style="border:1px solid;width:40%;height:30%;font-size:25px;margin-top:30px;">
                                        <tr>
                                            <td>Email:</td>
                                            <td><span t-field="o.work_email"/></td>
                                        </tr>
                                    </table>
                                    <table style="font-size:28px;margin-top:35px;margin-left:85px">
                                     
                                        <tr>
                                            <td valign="top">Resident Address: </td>
                                            <td>
                                                <span t-field="o.address_home_id.street"/><br/>
                                                <span t-field="o.address_home_id.street2"/><br/>
                                                <span t-field="o.address_home_id.city"/><br/>
                                                <span t-field="o.address_home_id.state_id"/>  
                                                <span t-field="o.address_home_id.zip"/><br/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td valign="top">Office Address: </td>
                                            <td>
                                                <span t-field="res_company.street"/><br/>
                                                <span t-field="res_company.street2"/><br/>
                                                <span t-field="res_company.city"/><br/>
                                                <span t-field="res_company.state_id"/>  <span t-field="res_company.zip"/><br/>
                                                <span t-field="res_company.country_id"/>
                                            </td>
                                        </tr>
                                        
                                    </table>
                                </center>
                                </div>
                                <div style="text-align:center;font-size:17px;margin-top:130px;color:white;font-weight:bold;margin-left:350px;">
                                    <span t-field="res_company.email"/>
                                </div>
                            </div>
                    </div>
                </div>
                </t>
            </t>
        </template>

        <record id="yellow_back_idcard" model="report.paperformat">
            <field name="name">Employee Yellow Back Icard</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">143</field>
            <field name="page_width">100</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

 
        <record id="yellow_back_icard_report" model="ir.actions.report">
            <field name="name">Yellow Id-Card Report BACK</field>
            <field name="model">hr.employee</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_employee_icard.yellow_icard_back_report</field>
            <field name="report_file">jt_employee_icard.yellow_icard_back_report</field>
            <field name="binding_model_id" ref="model_hr_employee"/>
            <field name="print_report_name">object.name</field>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="jt_employee_icard.yellow_back_idcard"/>
        </record>
    </data>
</odoo>
