<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sales_settings_invoicing_policy']" position="after">
                <div id="sales_return_invoicing_policy"
                     class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="sale_return_invoice_policy"/>
                        <div class="text-muted">
                            Quantities to invoice from sales return orders
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="sale_return_invoice_policy" class="o_light_label" widget="radio"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@name='invoicing_setting_container']" position="after">
                <h2>Return and Exchange Policy</h2>
                <div class="row mt16 o_settings_container" name="sale_return_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Return Period</span>
                        <div class="text-muted content-group mt16">
                            <span>Customer able to return within</span>
                            <field name="return_period" class="text-center oe_inline"/>
                            <span>days after deliver</span>
                        </div>

                        <span class="o_form_label">Exchange Period</span>
                        <div class="text-muted content-group mt16">
                            <span>Customer able to exchange within</span>
                            <field name="exchange_period" class="text-center oe_inline"/>
                            <span>days after deliver</span>
                        </div>
                    </div>
                </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
