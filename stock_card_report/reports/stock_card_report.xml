                <div class="act_as_cell">Valuation Value</div>
            </div>
        </div>
    </template>

    <template id="stock_card_report.report_stock_card_lines">
        <div class="act_as_row lines">
            <div class="act_as_cell left">
                <t t-esc="product_line.date.strftime('%Y-%m-%d')"/>
            </div>
            <div class="act_as_cell left">
                <t t-esc="product_line.display_name"/>
            </div>
            <div class="act_as_cell right">
                <t t-esc="product_line.picking_id.partner_id.name"/>
            </div>
            <div class="act_as_cell right">
                <t t-esc="', '.join(map(lambda x: x.name or '', product_line.location_id))"/>
            </div>
            <div class="act_as_cell right">
                <t t-esc="product_line.location_dest_id.name"/>
            </div>
            <div class="act_as_cell right">
                <t t-esc="'{0:,.3f}'.format(product_line.product_in)"/>
            </div>
            <div class="act_as_cell right">
                <t t-if="product_line.price_unit &gt; 0 or product_line.location_id.usage not in ('internal', 'transit') &amp; product_line.location_dest_id.usage in ('internal', 'transit')">
                    <t t-esc="'{0:,.3f}'.format(product_line.price_unit)"/>
                </t>
                <t t-else="">
                    <t>0.0</t>
                </t>

            </div>
            <div class="act_as_cell right">
                <t t-esc="'{0:,.3f}'.format(product_line.product_out)"/>
            </div>
            <div class="act_as_cell right">
                <t t-if="product_line.price_unit &lt; 0 or product_line.location_id.usage in ('internal', 'transit') &amp; product_line.location_dest_id.usage not in ('internal', 'transit')">
                    <t t-esc="'{0:,.3f}'.format(abs(product_line.price_unit))"/>
                </t>
                <t t-else="">
                    <t>0.0</t>
                </t>
            </div>
            <div class="act_as_cell right">
                <t t-esc="'{0:,.3f}'.format(product_balance)"/>
            </div>
            <div class="act_as_cell right">
                <t t-esc="'{0:,.3f}'.format(total_price)"/>
            </div>
        </div>
    </template>

