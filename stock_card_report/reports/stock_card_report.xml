    <template id="stock_card_report.internal_layout">
        <div class="article">
            <link href="/stock_card_report/static/src/css/report.css" rel="stylesheet"/>
            <t t-raw="0"/>
        </div>
        <div class="footer">
            <div class="row">
                <div class="col-6 custom_footer">
                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                </div>
                <div class="col-6 text-right custom_footer">
                    <span class="page"/>/
                    <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <template id="report_buttons">
        <div class="button_row">
            <button class="o_stock_card_reports_print btn btn-sm oe_button"><span
                    class="fa fa-print"
            />Print
            </button>
            <button class="o_stock_card_reports_export btn btn-sm oe_button"><span
                    class="fa fa-download"
            />Export
            </button>
        </div>
    </template>

    <template id="report_stock_card_report_html">
        <div class="o_stock_card_reports_page">
            <t t-call="stock_card_report.report_buttons"/>
            <t t-call="stock_card_report.report_stock_card_report_base"/>
        </div>
    </template>

    <template id="report_stock_card_report_html_without_details">
        <div class="o_stock_card_reports_page">
            <t t-call="stock_card_report.report_buttons"/>
            <t t-call="stock_card_report.report_stock_card_report_base_without_details"/>
        </div>
    </template>

    <template id="stock_card_report.report_stock_card_report_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="stock_card_report.internal_layout">
                    <t t-call="stock_card_report.report_stock_card_report_base"/>
                </t>
            </t>
        </t>
    </template>

    <template id="stock_card_report.report_stock_card_report_pdf_without_details">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="stock_card_report.internal_layout">
                    <t t-call="stock_card_report.report_stock_card_report_base_without_details"/>
                </t>
            </t>
        </t>
    </template>

    <template id="stock_card_report.report_stock_card_report_base">
        <t t-foreach="o.product_ids" t-as="product">
            <div class="page">
                <div class="row">
                    <t t-set="title">Stock Card -
                        <t t-raw="product.name"/>
                    </t>
                    <h4 class="mt0" t-esc="title" style="text-align: center;"/>
                </div>
                <!-- Display filters -->
                <t t-call="stock_card_report.report_stock_card_report_filters"/>
                <!-- Display stock card table -->
                <div class="act_as_table data_table mt4" style="width: 100%;">
                    <!-- Display header line-->
                    <t t-call="stock_card_report.report_stock_card_lines_header"/>
                    <!-- Display initial lines -->
                    <t
                            t-set="initial"
                            t-value="o._get_initial(o.results.filtered(lambda l: l.product_id == product and l.is_initial))"
                    />

                    <div class="act_as_row labels">
                        <div class="act_as_cell"/>
                        <div class="act_as_cell"/>
                        <div class="act_as_cell"/>
                        <div class="act_as_cell">
                            Initial
                        </div>
                        <div class="act_as_cell"/>
                        <div class="act_as_cell"/>
                        <div class="act_as_cell"/>
                        <div class="act_as_cell"/>
                        <div class="act_as_cell"/>
                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(initial)"/>
                        </div>
                        <div class="act_as_cell"/>
                    </div>

                    <!-- Display each lines -->
                    <t t-set="product_balance" t-value="initial"/>
                    <t t-set="total_balance" t-value="0"/>
                    <t t-set="total_in" t-value="0"/>
                    <t t-set="total_out" t-value="0"/>
                    <t t-set="total_price_in" t-value="0"/>
                    <t t-set="total_price_out" t-value="0"/>
                    <t t-set="total_price" t-value="0"/>
                    <t t-foreach="o.results.filtered(lambda l: l.product_id == product and not l.is_initial)"
                       t-as="product_line">
                        <t t-set="product_balance"
                           t-value="product_balance + product_line.product_in - product_line.product_out"/>

                        <t t-set="total_balance"
                           t-value="product_balance"/>

                        <t t-set="total_in"
                           t-value="product_line.product_in + total_in"/>

                        <t t-if="product_line.price_unit &gt; 0 or product_line.location_id.usage not in ('internal', 'transit') &amp; product_line.location_dest_id.usage in ('internal', 'transit')">
                            <t t-set="total_price_in"
                               t-value="product_line.price_unit + total_price_in"/>
                        </t>

                        <t t-set="total_out"
                           t-value="product_line.product_out + total_out"/>

                        <t t-if="product_line.price_unit &lt; 0 or product_line.location_id.usage in ('internal', 'transit') &amp; product_line.location_dest_id.usage not in ('internal', 'transit')">
                            <t t-set="total_price_out"
                               t-value="product_line.price_unit + total_price_out"/>
                        </t>

                        <t t-set="total_price"
                           t-value="product_line.price_unit + total_price"/>

                        <t t-call="stock_card_report.report_stock_card_lines"/>
                    </t>


                    <div class="act_as_row labels">
                        <div class="act_as_cell"/>
                        <div class="act_as_cell"/>
                        <div class="act_as_cell">
                            Total
                        </div>
                        <div class="act_as_cell">
                            Initial
                        </div>
                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(initial)"/>
                        </div>
                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(total_in)"/>

                        </div>
                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(total_price_in)"/>

                        </div>
                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(total_out)"/>

                        </div>
                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(abs(total_price_out))"/>

                        </div>
                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(total_balance)"/>

                        </div>
                        <div class="act_as_cell right">
                            <t t-esc="'{0:,.3f}'.format(total_price)"/>

                        </div>
                    </div>
                </div>
                <p style="page-break-before:always;"/>
            </div>
        </t>
    </template>

