<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherited product.product form view -->
    <record id="inherit_product_normal_form_view" model="ir.ui.view">
        <field name="name">inherit.product.normal.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//span[hasclass('d-inline-block')][2]" position="inside">
                <field name="is_free"/>
                <label for="is_free"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_product_normal_tree_view" model="ir.ui.view">
        <field name="name">inherit.product.normal.tree.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lst_price']" position="before">
                <field name="is_free" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_product_normal_easy_edit_view" model="ir.ui.view">
        <field name="name">inherit.product.normal.easy.edit.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="before">
                <group>
                    <field name="is_free"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="inherit_product_template_form_view" model="ir.ui.view">
        <field name="name">inherit.product.template.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//span[hasclass('d-inline-block')][2]" position="inside">
                <field name="is_free_temp"/>
                <label for="is_free_temp"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_product_template_tree_view" model="ir.ui.view">
        <field name="name">inherit.product.template.tree.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='responsible_id']" position="after">
                <field name="is_free_temp" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Inherited purchase.order form view -->
    <record id="inherit_purchase_order_form" model="ir.ui.view">
        <field name="name">inherit.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                <field name="free_product" invisible="1" force_save="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
