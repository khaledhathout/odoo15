<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_purchasequotation_document_inherited" inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//th[@name='th_description']" position="after">
                <t t-if="o.show_measure == True">
                    <th name="th_length"><strong>Length</strong></th>
                    <th name="th_width"><strong>Width</strong></th>
                    <th name="th_height"><strong>Height</strong></th>
                </t>
            </xpath>

            <xpath expr="//td[@id='product']" position="after">
                <t t-if="o.show_measure == True">
                    <td class="text-center">
                        <span t-field="order_line.length"/>
                    </td>
                    <td class="text-center">
                        <span t-field="order_line.width"/>
                    </td>
                    <td class="text-center">
                        <span t-field="order_line.height"/>
                    </td>
                </t>
            </xpath>
        </template>

        <template id="report_purchaseorder_document_inherited" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//th[@name='th_description']" position="after">
                <t t-if="o.show_measure == True">
                    <th name="th_length"><strong>Length</strong></th>
                    <th name="th_width"><strong>Width</strong></th>
                    <th name="th_height"><strong>Height</strong></th>
                </t>
            </xpath>

            <xpath expr="//td[@id='product']" position="after">
                <t t-if="o.show_measure == True">
                    <td class="text-center">
                        <span t-field="line.length"/>
                    </td>
                    <td class="text-center">
                        <span t-field="line.width"/>
                    </td>
                    <td class="text-center">
                        <span t-field="line.height"/>
                    </td>
                </t>
            </xpath>
        </template>

    </data>
</odoo>
