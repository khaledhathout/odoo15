<odoo>
    <data>
        <record id="global_discount_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">ks.res.config.settings.view.form.inherit.account.global.discount</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="50"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='has_accounting_entries']" position="after">
                    <h2>Universal Discount</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_sale_discount"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for ='enable_sale_discount'/>
                                <div class="text-muted">
                                    Activate Universal discount on sale modules.
                                </div>

                            </div>
                        </div>

                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_purchase_discount"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for ='enable_purchase_discount'/>
                                <div class="text-muted">
                                    Activate Universal discount on purchase modules.
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible':[('enable_sale_discount','=',False),('enable_purchase_discount','==',False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Accounts</span>
                                <div class="text-muted">
                                        Set default Universal discount accounts for sale and purchase order.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16" attrs="{'invisible':[('enable_sale_discount','=',False)]}">
                                        <label for="sales_discount_account"
                                               class="col-md-3 o_light_label"/>
                                        <field name="sales_discount_account"
                                               attrs="{'required': [('enable_sale_discount','==',True)]}"/>
                                    </div>
                                    <div class="row mt16" attrs="{'invisible':[('enable_purchase_discount','=',False)]}" >
                                        <label for="purchase_discount_account"
                                               class="col-md-3 o_light_label"/>
                                        <field name="purchase_discount_account"
                                               attrs="{'required': [('enable_purchase_discount','==',True)]}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>